<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SymptomsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_know"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="What you need to know\n
✔ Anyone can have mild to severe symptoms.\n
✔ Older adults and people who have severe underlying medical conditions like heart or lung disease or diabetes seem to be at higher risk for developing more serious complications from COVID-19 illness." />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/txt_know"
            android:layout_marginTop="20dp"
            android:src="@drawable/sym1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img1"
            android:layout_marginTop="20dp"
            android:src="@drawable/sym2" />

        <LinearLayout
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <ImageView
                android:id="@+id/img_LL_1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/img2"
                android:src="@drawable/sym3" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <ImageView
                android:id="@+id/img_LL_2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/img2"
                android:layout_toRightOf="@+id/img3"
                android:src="@drawable/sym5" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
        </LinearLayout>


        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img3"
            android:layout_marginTop="20dp"
            android:src="@drawable/sym4" />

    </RelativeLayout>
</ScrollView>